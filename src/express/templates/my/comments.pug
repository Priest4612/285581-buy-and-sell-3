extends ../layout

block content
  main.page-content
    section.comments
      .comments__wrapper
        h1.visually-hidden Страница комментариев
        each apiOffer in apiOffersData
          .comments__block
            .comments__header
              a.announce-card(href="#")
                h2.announce-card__title #{apiOffer.title}
                span.announce-card__info
                  span.announce-card__price ₽ #{apiOffer.sum}
                  +ticketLabel(apiOffer.offerTypes.name)(class=`announce-card__type`)
            ul.comments-list
            each comment in apiOffer.comments
              li.js-card
                .comment-card
                  .comment-card__header
                    a.comment-card__avatar.avatar(href="#")
                      img(src=comment.users.avatar srcset=comment.users.avatar alt="Аватар пользователя")
                    p.comment-card__author #{`${comment.users.firstname} ${comment.users.lastname}`}
                  .comment-card__content
                    p
                      | #{comment.text}
                  button.comment-card__delete.js-delete(type="button") Удалить
